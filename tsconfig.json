{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "release-dist",
        "baseUrl": ".",
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*",
                "server/*"
            ]
        }
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "server/public"
    ]
}